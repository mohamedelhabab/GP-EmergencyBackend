@model IEnumerable<GP_EmergencyBackend.Models.real_accident>

<!DOCTYPE html>
<html>
  <head>

      @*<meta http-equiv="refresh" content="5; URL=~/Controllers/AmbulanceController/whole_map.cs">*@

      <title>Location Map</title>

  
<link href="~/Content/Site.css" rel="stylesheet" /> 
           <script src="~/Scripts/jquery-3.1.1.js"></script>

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCNiqU2i67ojpnVjsQkadaqiIIxCZMoOrE"></script>
<script type="text/javascript" src="~/Scripts/jquery.googlemap.js"></script>
     
      
      <script type="text/javascript">
       $(function () {
           $("#map").googleMap({
               type: "SATELLITE "
           });
         

                @foreach (var item in Model) {
              if (item.solved==false)
              {   
                   @: var Lat = '@item.latitude';
           @: var Long = '@item.longitude';
                  
                     @:   $("#map").addMarker({ coords: [Lat, Long] });

             
              }
          
          }

        

          
         
       })






</script>
      


  </head>
  <body >    
      
        <div id="mapupdate">

    <div id="map" style="width: 1000px; height:500px;"></div>
      </div>


    <div id="test"></div>

  </body>
</html>